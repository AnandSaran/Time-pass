<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.gregantech.timepass.widget.TimePassIconTextView
            android:id="@+id/tpItvLive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/dp_15"
            android:gravity="center"
            android:layout_weight="1"
            app:showIcon="false"
            app:tpBg="@drawable/bg_red_rounded"
            app:tpLabel="@string/live"
            app:tpLabelCapsAll="true" />

        <com.gregantech.timepass.widget.TimePassIconTextView
            android:id="@+id/tpItvUsers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            app:tpBg="@drawable/bg_black_rounded"
            app:tpIcon="@drawable/ic_live_user"
            app:tpLabel="0" />

        <com.gregantech.timepass.widget.TimePassIconTextView
            android:id="@+id/tpItvLove"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            app:tpBg="@drawable/bg_black_rounded"
            app:tpIcon="@drawable/ic_love"
            app:tpLabel="0" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivClose"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_15"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_delete" />

    </LinearLayout>

</layout>